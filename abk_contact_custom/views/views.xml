<odoo>
  <data>
    <record id="view_contacts_form_abk_contact_address" model="ir.ui.view">
            <field name="name">res.partner.form.abk.contact.address</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group/group" position="inside">
                    <field name="name_english" placeholder="English Name"/>
                    <field name="address_english" placeholder="English Address"/>
                    <field name="address_chinese" placeholder="Chinese Address"/>
                    <field name="fax" placeholder="Fax"/>
                    <field name="attention" placeholder="Attention"/>
                    <field name="invattn" placeholder="Invoice Attention"/>
                    <field name="contact" placeholder="Contact"/>
                    <field name="lang_use" placeholder="Language"/>
                    <field name="payterm" placeholder="Payterm"/>
                    <field name="paydesc" placeholder="Payment Description"/>
                    <field name="remark" placeholder="Remark"/>
                    <field name="monthpay" placeholder="Month pay"/>
                    <field name="crlimit" placeholder="Credit Limited" widget="radio" class="oe_edit_only"/>
                    <field name="crlimit_amount" placeholder="Credit Limit Amount"/>
                    <field name="discnt" placeholder="Discount" />
                    <field name="salescode" placeholder="Sales code"/>
                    <field name="invdiscnt" placeholder="Invoice Discount"/>
                    <field name="chiadd"/>
                    <field name="allow_payment" placeholder="Allow Payment"/>
                    <field name="payment_type" placeholder="Payment Type"/>
                    <field name="auto_open_inv_ers_inv" placeholder="Auto Open Invoice/ERS Invoice" />
                    <field name="currency"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>